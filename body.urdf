<?xml version="1.0"?>
<robot name="Krever">
   
<!--colors-->
    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 0.7 1"/>
    </material>

    <material name="red">
        <color rgba="0.7 0 0 1"/>
    </material>
     
    
    <link name="base_footprint"/>


<!--base chassis-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.8 0.6 0.3"/>
            </geometry>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <material name="red"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.6 0.8 0.3"/>
            </geometry>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <material name="red"/>
        </collision>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>



<!--lidar-->
    <link name="lidar">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </collision>
    </link>

    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar"/>
        <origin xyz="0 0 0.325" rpy="0 0 0"/>
    </joint>


<!-- left wheel-->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="green"/>
        </collision>
    </link>

    <joint name="base_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.325 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>


<!--right wheel-->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="green"/>
        </collision>
    </link>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="-0 -0.325 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

<!-- caster wheel1 -->
    <link name="caster_wheel1">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="blue"/>
        </collision>
    </link>
    
    <joint name="body_caster_wheel_joint1" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel1"/>
        <origin xyz="0.3 0 -0.05" rpy="0 0 0"/>
    </joint>

<!-- caster wheel2 -->
    <link name="caster_wheel2">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="blue"/>
        </collision>
    </link>
    
    <joint name="body_caster_wheel_joint2" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel2"/>
        <origin xyz="-0.3 0 -0.05" rpy="0 0 0"/>
    </joint>



<!--supporint rod-->
    <link name="support_rod">
        <visual>
            <geometry>
                <box size="0.1 0.1 1.07" />
            </geometry>
            <material name="LightGrey">
                <color rgba="0.7 0.7 0.7 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.1 1.07" />
            </geometry>
        </collision>
    </link>

    <joint name="base_suppot_joint" type="fixed">
        <origin xyz="-0.35 0. 0.835" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="support_rod"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>


<!--u1-->
    <link name="u1">
        <visual>
            <geometry>
                <box size="0.6 0.1 0.04" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.1 0.04" />
            </geometry>
        </collision>
    </link>

    <joint name="u1" type="fixed">
        <origin xyz="0 0 0.555" rpy="0.0 0.0 1.57"/>
        <parent link="support_rod"/>
        <child link="u1"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

<!--u2-->
    
    <link name="u2">
        <visual>
            <geometry>
                <box size="0.6 0.1 0.04" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.1 0.04" />
            </geometry>
        </collision>
    </link>

    <joint name="u2" type="fixed">
        <origin xyz="0.25 0.35 0.555" rpy="0.0 0.0 0"/>
        <parent link="support_rod"/>
        <child link="u2"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>    


<!--u3-->
    
    <link name="u3">
        <visual>
            <geometry>
                <box size="0.6 0.1 0.04" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.1 0.04" />
            </geometry>
        </collision>
    </link>

    <joint name="u3" type="fixed">
        <origin xyz="0.25 -0.35 0.555" rpy="0.0 0.0 0"/>
        <parent link="support_rod"/>
        <child link="u3"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

<!--tray-->
    <link name="tray">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.65 0.8 0.01"/>
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.65 0.8 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name="joint_name" type="fixed">
        <origin xyz="0.375 0.0 -0.465" rpy="0.0 0.0 0.0"/>
        <parent link="support_rod"/>
        <child link="tray"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>
</robot>